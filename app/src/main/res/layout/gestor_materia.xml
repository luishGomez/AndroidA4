<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GestorMateriaActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTopGestorMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glMidGestorMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glBottomGestorMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glIzqGestorMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glDerGestorMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <Button
        android:id="@+id/btnCrearMateriaGestorMateria"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/boton_menu"
        android:onClick="btnCrearMateria"
        android:text="@string/btnCrear"
        app:layout_constraintBottom_toTopOf="@+id/glMidGestorMateria"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/glDerGestorMateria"
        app:layout_constraintStart_toStartOf="@+id/glIzqGestorMateria"
        app:layout_constraintTop_toTopOf="@+id/glTopGestorMateria" />

    <Button
        android:id="@+id/btnListadoMateriaGestorMateria"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/boton_menu"
        android:onClick="btnListadoMateria"
        android:text="@string/btnVisualizar"
        app:layout_constraintBottom_toTopOf="@+id/glBottomGestorMateria"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/glDerGestorMateria"
        app:layout_constraintStart_toStartOf="@+id/glIzqGestorMateria"
        app:layout_constraintTop_toTopOf="@+id/glMidGestorMateria" />

</androidx.constraintlayout.widget.ConstraintLayout>