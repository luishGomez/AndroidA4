<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GestorPackActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glTopGestorPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glMidGestorPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glBottomGestorPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glIzqGestorPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glDerGestorPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <Button
        android:id="@+id/btnCrearMateriaGestorPack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/boton_menu"
        android:onClick="btnCrearPack"
        android:text="@string/btnCrear"
        app:layout_constraintBottom_toTopOf="@+id/glMidGestorPack"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/glDerGestorPack"
        app:layout_constraintStart_toStartOf="@+id/glIzqGestorPack"
        app:layout_constraintTop_toTopOf="@+id/glTopGestorPack" />

    <Button
        android:id="@+id/btnListadoMateriaGestorPack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/boton_menu"
        android:onClick="btnListadoPack"
        android:text="@string/btnVisualizar"
        app:layout_constraintBottom_toTopOf="@+id/glBottomGestorPack"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/glDerGestorPack"
        app:layout_constraintStart_toStartOf="@+id/glIzqGestorPack"
        app:layout_constraintTop_toTopOf="@+id/glMidGestorPack" />
</androidx.constraintlayout.widget.ConstraintLayout>