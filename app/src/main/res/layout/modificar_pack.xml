<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ModificarPackActivity">


    <Button
        android:id="@+id/btnModificarPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ui_rectangle"
        android:onClick="btnModificarPack"
        android:text="@string/btnModificar"
        app:layout_constraintEnd_toStartOf="@+id/glmModificarPack"
        app:layout_constraintStart_toStartOf="@+id/glizModificarPack"
        app:layout_constraintTop_toTopOf="@+id/glbottomModificarPack" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gltopModificarPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glbottomModificarPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glizModificarPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glmModificarPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gldeModificarPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <EditText
        android:id="@+id/etTituloPackModificarPack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/hintPackTituloPack"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/gldeModificarPack"
        app:layout_constraintStart_toStartOf="@+id/glizModificarPack"
        app:layout_constraintTop_toTopOf="@+id/gltopModificarPack" />

    <EditText
        android:id="@+id/etDescripcionPackModificarPack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/hintPackDescripcionPack"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/glbottomModificarPack"
        app:layout_constraintEnd_toStartOf="@+id/gldeModificarPack"
        app:layout_constraintStart_toStartOf="@+id/glizModificarPack"
        app:layout_constraintTop_toBottomOf="@+id/etTituloPackModificarPack" />

    <Button
        android:id="@+id/btnEliminarPack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ui_rectangle"
        android:onClick="btnEliminarPack"
        android:text="@string/btnEliminar"
        app:layout_constraintEnd_toStartOf="@+id/gldeModificarPack"
        app:layout_constraintStart_toStartOf="@+id/glmModificarPack"
        app:layout_constraintTop_toTopOf="@+id/glbottomModificarPack" />

</androidx.constraintlayout.widget.ConstraintLayout>