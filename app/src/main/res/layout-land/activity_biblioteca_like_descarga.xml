<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="onClickLike"
        android:text="@string/like"
        app:layout_constraintEnd_toStartOf="@+id/btnDislike"
        app:layout_constraintStart_toEndOf="@+id/btnDescargar"
        app:layout_constraintTop_toBottomOf="@+id/txtBibliotecaDescripcion" />

    <Button
        android:id="@+id/btnDescargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="17dp"
        android:onClick="onClickDescargaBiblioteca"
        android:text="@string/descargar"
        app:layout_constraintBottom_toTopOf="@+id/btnVolverBibliotecaLikeDescarga"
        app:layout_constraintEnd_toStartOf="@+id/btnLike"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBibliotecaDescripcion" />

    <Button
        android:id="@+id/btnDislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="48dp"
        android:onClick="onClickDislike"
        android:text="@string/dislike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLike"
        app:layout_constraintTop_toBottomOf="@+id/txtBibliotecaDescripcion" />

    <TextView
        android:id="@+id/lblApunte"
        android:layout_width="93dp"
        android:layout_height="46dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="74dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtBibliotecaDescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451" />

    <Button
        android:id="@+id/btnVolverBibliotecaLikeDescarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickVolverBiblioteca"
        android:text="@string/btnVolver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <TextView
        android:id="@+id/txtBibliotecaDescripcion"
        android:layout_width="252dp"
        android:layout_height="224dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.819"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

</androidx.constraintlayout.widget.ConstraintLayout>